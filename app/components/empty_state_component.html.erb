<div class="<%= container_classes %>" <%= options.map { |k, v| "#{k}=\"#{v}\"" }.join(" ").html_safe if options.any? %>>
  <% if variant == :simple %>
    <%= message %>
  <% else %>
    <% if show_icon? %>
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="<%= icon_svg_path %>" />
      </svg>
    <% end %>
    <h3 class="<%= show_icon? ? 'mt-2' : '' %> text-sm font-medium text-gray-900 dark:text-white"><%= title %></h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= message %></p>
    <% if show_action? %>
      <div class="mt-6">
        <%= render LinkButtonComponent.new(text: action_text, url: action_url, variant: action_variant) %>
      </div>
    <% end %>
  <% end %>
</div>
