<div>
  <%= form.label field, label_text, class: label_classes, id: "#{field_id}_label" %>

  <div class="relative mt-2" x-data="{ open: false }" @click.away="open = false">
    <!-- Select button -->
    <button type="button"
            x-ref="button"
            @click="open = !open"
            :aria-expanded="open"
            aria-haspopup="listbox"
            :aria-labelledby="`#{field_id}_label`"
            class="<%= select_classes %>"
            id="<%= listbox_button_id %>">
      <span class="col-start-1 row-start-1 truncate pr-6">
        <%= selected_option_text %>
      </span>
      <svg class="col-start-1 row-start-1 size-5 self-center justify-self-end text-gray-500 dark:text-gray-400 sm:size-4"
          viewBox="0 0 16 16"
          fill="currentColor"
          aria-hidden="true">
        <path fill-rule="evenodd" d="M5.22 10.22a.75.75 0 0 1 1.06 0L8 11.94l1.72-1.72a.75.75 0 1 1 1.06 1.06l-2.25 2.25a.75.75 0 0 1-1.06 0l-2.25-2.25a.75.75 0 0 1 0-1.06ZM10.78 5.78a.75.75 0 0 1-1.06 0L8 4.06 6.28 5.78a.75.75 0 0 1-1.06-1.06l2.25-2.25a.75.75 0 0 1 1.06 0l2.25 2.25a.75.75 0 0 1 0 1.06Z" clip-rule="evenodd" />
      </svg>
    </button>

    <!-- Hidden select for form submission -->
    <%= form.select field, options,
                    { prompt: prompt },
                    { class: "sr-only", tabindex: "-1", "aria-hidden": "true" } %>

    <!-- Dropdown menu -->
    <ul x-show="open"
        x-transition:enter="transition ease-out duration-100"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-75"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="absolute z-10 mt-1 max-h-60 w-full overflow-auto rounded-md bg-white dark:bg-gray-800 py-1 text-base shadow-lg ring-1 ring-black/5 dark:ring-white/10 focus:outline-hidden sm:text-sm"
        tabindex="-1"
        role="listbox"
        :aria-labelledby="`#{field_id}_label`"
        id="<%= listbox_id %>">

      <% if prompt.present? %>
        <li @click="$refs.select.value = ''; $refs.button.querySelector('span').textContent = '<%= prompt %>'; open = false"
            class="relative cursor-default py-2 pr-9 pl-3 text-gray-900 dark:text-white select-none hover:bg-emerald-600 hover:text-white"
            role="option">
          <span class="block truncate font-normal"><%= prompt %></span>
        </li>
      <% end %>

      <% if options.is_a?(Array) %>
        <% options.each_with_index do |option, index| %>
          <% option_text = option.first %>
          <% option_value = option.last %>
          <% is_selected = form.object.send(field).to_s == option_value.to_s %>

          <li @click="$refs.select.value = '<%= option_value %>'; $refs.button.querySelector('span').textContent = '<%= option_text %>'; open = false"
              class="relative cursor-default py-2 pr-9 pl-3 text-gray-900 dark:text-white select-none hover:bg-emerald-600 hover:text-white"
              id="<%= option_id(index) %>"
              role="option"
              :aria-selected="$refs.select.value === '<%= option_value %>'">
            <span class="block truncate <%= is_selected ? 'font-semibold' : 'font-normal' %>">
              <%= option_text %>
            </span>

            <% if is_selected %>
              <span class="absolute inset-y-0 right-0 flex items-center pr-4 text-emerald-600">
                <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                </svg>
              </span>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <% if help_text.present? %>
    <p id="<%= help_id %>" class="<%= help_text_classes %>">
      <%= help_text %>
    </p>
  <% end %>

  <% if has_errors? %>
    <div id="<%= error_id %>" class="mt-2">
      <% error_messages.each do |message| %>
        <p class="text-sm text-red-600 dark:text-red-400">
          <%= message %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>

<script>
  // Add reference to the hidden select for Alpine.js
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('[x-data*="open"]');
    if (container) {
      const select = container.querySelector('select');
      const button = container.querySelector('button');
      if (select && button) {
        button.setAttribute('x-ref', 'button');
        select.setAttribute('x-ref', 'select');
      }
    }
  });
</script>
