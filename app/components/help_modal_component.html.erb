<!-- Help Modal -->
<div class="<%= modal_classes %>"
    data-controller="help-modal"
    data-action="keydown@window->help-modal#handleKeydown click->help-modal#handleBackdropClick"
    data-help-modal-target="modal"
    style="display: none;">

  <!-- Backdrop -->
  <div class="fixed inset-0 bg-gray-600 bg-opacity-75 transition-opacity" data-help-modal-target="backdrop"></div>

  <!-- Modal Content -->
  <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
    <div class="relative transform overflow-hidden rounded-lg bg-white dark:bg-gray-800 text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">

      <!-- Header -->
      <div class="bg-white dark:bg-gray-800 px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <!-- Heroicons: question-mark-circle -->
            <svg class="h-6 w-6 text-blue-600 dark:text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white"><%= t('keyboard_shortcuts.title') %></h3>
          </div>
          <button type="button"
                  class="rounded-md bg-white dark:bg-gray-800 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  data-action="click->help-modal#hide">
            <!-- Heroicons: x-mark -->
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Content -->
      <div class="bg-white dark:bg-gray-800 px-4 pb-4 sm:px-6">
        <div class="space-y-4">

          <!-- Navigation Section -->
          <div>
            <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2"><%= t('keyboard_shortcuts.sections.navigation.title') %></h4>
            <div class="space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.navigation.move_left_right') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">H/L</kbd>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.navigation.move_up_down_column') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">J/K</kbd>
                </div>
              </div>
            </div>
          </div>

          <!-- Emacs Style Section -->
          <div>
            <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2"><%= t('keyboard_shortcuts.sections.emacs_style.title') %></h4>
            <div class="space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.emacs_style.move_left_right') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">B/F</kbd>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.emacs_style.move_up_down_column') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">P/N</kbd>
                </div>
              </div>
            </div>
          </div>

          <!-- Actions Section -->
          <div>
            <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2"><%= t('keyboard_shortcuts.sections.actions.title') %></h4>
            <div class="space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.actions.edit_comment') %></span>
                <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Enter</kbd>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.actions.save_stay_place') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Enter</kbd>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.actions.save_move_down') %></span>
                <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Enter</kbd>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.actions.save_move_up') %></span>
                <div class="flex space-x-1">
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Shift</kbd>
                  <span class="text-xs text-gray-500">+</span>
                  <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Enter</kbd>
                </div>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.actions.cancel_edit') %></span>
                <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Esc</kbd>
              </div>
            </div>
          </div>

          <!-- Help Section -->
          <div>
            <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2"><%= t('keyboard_shortcuts.sections.help.title') %></h4>
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600 dark:text-gray-400"><%= t('keyboard_shortcuts.sections.help.show_hide_help') %></span>
              <div class="flex space-x-1">
                <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">Ctrl</kbd>
                <span class="text-xs text-gray-500">+</span>
                <kbd class="px-2 py-1 text-xs text-white bg-gray-100 dark:bg-gray-700 rounded border">/</kbd>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- Footer -->
      <div class="bg-gray-50 dark:bg-gray-700 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
        <button type="button"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white dark:bg-gray-600 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-white shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-500 hover:bg-gray-50 dark:hover:bg-gray-500 sm:mt-0 sm:w-auto"
                data-action="click->help-modal#hide">
          <%= t('buttons.close') %>
        </button>
      </div>

    </div>
  </div>
</div>
