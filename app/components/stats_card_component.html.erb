<% content_wrapper = url ? "a" : "div" %>
<% wrapper_options = url ? { href: url, class: "#{card_classes} hover:shadow-md transition-shadow" } : { class: card_classes } %>

<%= content_tag(content_wrapper, wrapper_options) do %>
  <div class="p-5">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 <%= icon_color %>" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="<%= icon_path %>"></path>
        </svg>
      </div>
      <div class="ml-5 w-0 flex-1">
        <dl>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate"><%= title %></dt>
          <dd class="text-lg font-medium text-gray-900 dark:text-white"><%= value %></dd>
        </dl>
      </div>
    </div>
  </div>
<% end %>
