<div>
  <% if forgot_password_link %>
    <div class="flex items-center justify-between">
      <%= form.label field, label_with_required_indicator, for: field_id, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
      <div class="text-sm">
        <%= forgot_password_link %>
      </div>
    </div>
  <% else %>
    <%= form.label field, label_with_required_indicator, for: field_id, class: "block text-sm/6 font-medium text-gray-900 dark:text-white" %>
  <% end %>
  <div class="mt-2">
    <%= form.send("#{type}_field", field,
          id: field_id,
          class: input_classes,
          required: required,
          autocomplete: autocomplete,
          placeholder: placeholder_text,
          "aria-required": required ? "true" : nil,
          "aria-invalid": error ? "true" : nil,
          "aria-describedby": [error ? "#{field_id}-error" : nil, help_text_value ? "#{field_id}-help" : nil].compact.join(" ").presence,
          **options) %>
  </div>
  <% if help_text_value %>
    <p id="<%= field_id %>-help" class="mt-2 text-sm text-gray-600 dark:text-gray-400"><%= help_text_value %></p>
  <% end %>
  <% if error %>
    <p class="mt-2 text-sm text-red-600 dark:text-red-400 inline-flex items-center" id="<%= field_id %>-error">
      <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
        <path fill-rule="evenodd" d="M18 10a8 8 0 1 1-16 0 8 8 0 0 1 16 0ZM8.28 7.22a.75.75 0 0 0-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 1 0 1.06 1.06L10 11.06l1.72 1.72a.75.75 0 1 0 1.06-1.06L11.06 10l1.72-1.72a.75.75 0 0 0-1.06-1.06L10 8.94 8.28 7.22Z" clip-rule="evenodd" />
      </svg>
      <%= error %>
    </p>
  <% end %>
</div>
