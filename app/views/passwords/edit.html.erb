<%= render FormContainerComponent.new(
  title_key: "auth.reset_password.title"
) do %>
  <% if flash[:alert] || flash[:notice] %>
    <%= render 'shared/flash_messages' %>
  <% end %>

  <%= form_with url: password_path(params[:token]), method: :put, local: true, class: "space-y-6" do |form| %>
    <%= render InputComponent.new(
      form: form,
      field: :password,
      type: :password,
      required: true,
      autocomplete: "new-password",
      maxlength: 72,
      autofocus: true,
      i18n_scope: "auth.reset_password"
    ) %>

    <%= render InputComponent.new(
      form: form,
      field: :password_confirmation,
      type: :password,
      required: true,
      autocomplete: "new-password",
      maxlength: 72,
      i18n_scope: "auth.reset_password"
    ) %>

    <div>
      <%= render ButtonComponent.new(
        text: t("auth.reset_password.submit_button"),
        type: :submit,
        variant: :primary,
        class: "flex w-full justify-center"
      ) %>
    </div>

    <%= render LinkComponent.new(
      text: t("auth.reset_password.back_to_sign_in"),
      url: new_session_path
    ) %>
  <% end %>
<% end %>
