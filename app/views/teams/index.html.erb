<% content_for :title, t("teams.index.title") %>

<div class="min-h-full bg-gray-50 dark:bg-gray-900">
  <%= render 'shared/navbar' %>

  <% if flash[:alert] || flash[:notice] %>
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 pt-4">
      <%= render 'shared/flash_messages' %>
    </div>
  <% end %>

  <div class="py-6">
    <main>
      <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= t("teams.index.title") %></h1>
          </div>

          <%= render LinkButtonComponent.new(text: t("teams.index.new_button"), url: new_team_path, variant: :primary) %>
        </div>


        <!-- Teams Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @teams.each do |team| %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow">
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center mb-2">
                      <img class="h-6 w-6 rounded-full mr-2" src="https://github.com/<%= team.organization.github_login %>.png" alt="<%= team.organization.name %>">
                      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <%= link_to team.name, team_path(team), class: "hover:text-emerald-600 dark:hover:text-emerald-400" %>
                      </h3>
                    </div>

                    <% if team.description.present? %>
                      <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2"><%= team.description %></p>
                    <% end %>
                  </div>
                </div>

              </div>
            </div>
          <% end %>
        </div>

        <% if @teams.empty? %>
          <div class="text-center py-12">
            <!-- Heroicons: user-group -->
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white"><%= t("teams.index.empty_state.title") %></h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              <%= t("teams.index.empty_state.message") %>
            </p>
          </div>
        <% end %>
      </div>
    </main>
  </div>
</div>
