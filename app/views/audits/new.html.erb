<% content_for :title, t("audits.new.title") %>

<div class="min-h-full bg-gray-50 dark:bg-gray-900">
  <%= render 'shared/navbar' %>

  <div class="py-6">
    <main>
      <div class="max-w-3xl mx-auto px-2 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
          <nav class="flex mb-4" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-4">
              <li>
                <%= link_to t("navigation.audits"), audits_path, class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300" %>
              </li>
              <li>
                <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                </svg>
              </li>
              <li class="text-gray-900 dark:text-white font-medium">New Audit</li>
            </ol>
          </nav>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">New Audit Session</h1>
          <p class="text-gray-600 dark:text-gray-400 mt-2">Create a new GitHub team access audit session</p>
        </div>

        <!-- Form -->
        <div class="bg-white dark:bg-gray-800 shadow-sm rounded-lg border border-gray-200 dark:border-gray-700">
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white">Audit Session Details</h3>
          </div>

          <div class="p-6">
            <%= form_with model: @audit_session, url: audits_path, class: "space-y-6", data: { controller: "audit-form" } do |form| %>
              <% if @audit_session.errors.any? %>
                <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <!-- Heroicons: x-circle (mini) -->
                      <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
                        There were <%= pluralize(@audit_session.errors.count, "error") %> with your submission:
                      </h3>
                      <div class="mt-2 text-sm text-red-700 dark:text-red-300">
                        <ul class="list-disc list-inside space-y-1">
                          <% @audit_session.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <!-- Audit Session Name -->
              <div>
                <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <%= form.text_field :name,
                    placeholder: "Q2 2025 Platform Security Audit",
                    class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 dark:bg-gray-700 dark:text-white sm:text-sm" %>
              </div>

              <!-- Organization -->
              <div>
                <%= form.label :organization_id, t("audits.form.organization_label"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <%= form.select :organization_id,
                    options_from_collection_for_select(@organizations, :id, :name, @audit_session.organization_id),
                    { prompt: t("audits.form.organization_prompt") },
                    { class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 dark:bg-gray-700 dark:text-white sm:text-sm",
                      data: { action: "change->audit-form#loadTeams" } } %>
              </div>

              <!-- Team -->
              <div>
                <%= form.label :team_id, t("audits.form.team_label"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <%= form.select :team_id,
                    options_from_collection_for_select(@teams, :id, :name_with_slug, @audit_session.team_id),
                    { prompt: t("audits.form.team_prompt") },
                    { class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 dark:bg-gray-700 dark:text-white sm:text-sm",
                      data: { audit_form_target: "teamSelect" } } %>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Select an organization first to see available teams.</p>
              </div>

              <!-- Due Date -->
              <div>
                <%= form.label :due_date, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <%= form.date_field :due_date,
                    placeholder: "YYYY-MM-DD",
                    class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 dark:bg-gray-700 dark:text-white sm:text-sm" %>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Optional: Set a due date for this audit session.</p>
              </div>

              <!-- Notes -->
              <div>
                <%= form.label :notes, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
                <%= form.text_area :notes,
                    rows: 4,
                    placeholder: "Optional notes about this audit session...",
                    class: "block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-emerald-500 focus:border-emerald-500 dark:bg-gray-700 dark:text-white sm:text-sm" %>
              </div>

              <!-- Submit buttons -->
              <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                <%= link_to t("buttons.cancel"), audits_path,
                    class: "px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
                <%= form.submit t("audits.form.create_button"),
                    class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Help Text -->
        <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <!-- Heroicons: information-circle (mini) -->
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">
                Next Steps
              </h3>
              <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
                <p>After creating the audit session, you'll be able to:</p>
                <ul class="list-disc list-inside mt-1 space-y-1">
                  <li>Sync team members from GitHub</li>
                  <li>Review and validate team member access</li>
                  <li>Track compliance with admin and government employee requirements</li>
                  <li>Generate reports for eMASS documentation</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
